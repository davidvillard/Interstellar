---
import LayoutLogin from "../layouts/LayoutLogin.astro"
---
<LayoutLogin title="Login" description="Logueate en nuestra web!">
  <div class="w-full max-w-lg p-5 mx-auto">
    <h2 class="mb-8 text-center text-white text-4xl sm:text-5xl font-extrabold">¡Bienvenido!</h2>
    <form class="flex flex-col items-center space-y-4">
      <!-- Correo -->
      <div class="w-full">
        <label
          for="UserEmail"
          class="relative block overflow-hidden rounded-xl border border-[#86868b] px-3 pt-3 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600"
        >
          <input
            required
            type="email"
            id="UserEmail"
            placeholder="Email"
            class="peer text-white h-[45px] w-full border-none bg-transparent p-0 placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0 text-base sm:text-[1.1rem] font-custom mt-[3px]"
          />
          <span
            class="absolute text-gray-300 start-3 top-4 -translate-y-1/2 text-sm font-custom transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-4 peer-focus:text-sm cursor-text"
          >Correo</span>
        </label>
      </div>

      <!-- Contraseña -->
      <div class="w-full">
        <label
          for="UserPassword"
          class="relative block overflow-hidden rounded-xl border border-[#86868b] px-3 pt-3 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600"
        >
          <input
            required
            type="password"
            id="UserPassword"
            placeholder="Password"
            class="peer text-white h-[45px] w-full border-none bg-transparent p-0 placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0 text-base sm:text-[1.1rem] font-custom mt-[3px]"
          />
          <span
            class="absolute start-3 top-4 -translate-y-1/2 text-sm text-gray-300 font-custom transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-4 peer-focus:text-sm cursor-text"
          >Contraseña</span>
        </label>
      </div>

      <!-- Recuérdame y Olvidaste Contraseña -->
      <div class="flex items-center justify-between w-full">
        <div class="flex items-center">
          <label
            class="relative flex cursor-pointer items-center rounded-full"
            for="checkbox-2"
            data-ripple-dark="true"
          >
            <input
              type="checkbox"
              class="before:content['']  peer relative h-5 w-5 cursor-pointer appearance-none rounded-md border border-blue-gray-200 transition-all before:absolute before:top-2/4 before:left-2/4 before:block before:h-12 before:w-12 before:-translate-y-2/4 before:-translate-x-2/4 before:rounded-full before:bg-blue-gray-500 before:opacity-0 before:transition-opacity checked:border-blue-500 checked:bg-blue-500 checked:before:bg-blue-500 hover:before:opacity-10"
              id="checkbox-2"
              checked
            />
            <div
              class="pointer-events-none absolute top-2/4 left-2/4 -translate-y-2/4 -translate-x-2/4 text-white opacity-0 transition-opacity peer-checked:opacity-100"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-3.5 w-3.5"
                viewBox="0 0 20 20"
                fill="currentColor"
                stroke="currentColor"
                stroke-width="1"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
          </label>
          <label
            for="remember_me"
            class="ml-2 block text-gray-200 text-sm leading-5 font-custom"
            >Recu&eacute;rdame</label
          >
        </div>
        <a href="#" class="text-sm text-gray-200 font-custom underline">
          Olvidaste tu contrase&ntilde;a?
        </a>
      </div>

      <!-- Botón Iniciar Sesión -->
      <div class="w-full">
        <button
          class="w-full px-4 py-2 bg-blue-600 rounded-md font-semibold capitalize text-white hover:bg-blue-700 active:bg-blue-700 focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200 transition"
        >Iniciar Sesión</button>
      </div>

      <!-- Botón Crear Cuenta -->
      <div class="text-center text-gray-200">
        <p class="font-custom">No tienes una cuenta? <a href="/register/" class="underline font-custom">Crea una ahora!</a></p>
      </div>
    </form>
  </div>
</LayoutLogin>
