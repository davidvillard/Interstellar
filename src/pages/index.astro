---
import Layout from "../layouts/Layout.astro";
---

<Layout
	title="Pagina Web de Interstellar creada por davidvillard"
	description="Fan Page de Interstellar."
>
	<main class="flex items-center justify-center h-screen">
		<h1 class="font-serif text-white relative">
			<p class="text-2xl md:text-4xl lg:text-5xl lg:mr-10">INTERSTELLAR</p>
		</h1>
	</main>
</Layout>

<style>
	main {
		margin: 0 auto;
		color: white;
		line-height: 1.6;
	}

	h1 {
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 400px;
	}

	p {
		letter-spacing: 0.6em;
	}
</style>
