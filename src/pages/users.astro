---
import { db, User } from "astro:db";
import Layout from "../layouts/Layout.astro";
const users = await db.select().from(User);
---

<Layout title="Usuarios" description="Lista de usuarios">
    <div class="container mx-auto p-4">
        <h2 class="text-2xl font-semibold mb-4">Usuarios</h2>
        <p class="mb-6">Lista de usuarios registrados en la plataforma.</p>
        
        <section class="mb-8">
        <h3 class="text-xl font-medium mb-2">Usuarios registrados</h3>
        <ul>
            {users.map((user) => (
            <li>
                <strong>{user.name}</strong> - {user.email}
            </li>
            ))}
        </ul>
        </section>
    </div>
</Layout>
